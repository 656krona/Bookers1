<div class="form-area">
  <h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>

    <h5>Title</h5>
    <%= f.text_field :title %>

    <h5>Body</h5>
    <%= f.text_area :body %>

    <h5 class="btn-create">
    <%= f.submit 'Update Book' %>
    </h5>
  <% end %>

    <p class="post-menu">
      <%= link_to "Show", book_path(@book) %>
    </p>
    <span>|</span>
    <p class="post-menu">
      <%= link_to "Back", books_path %>
    </p>

</div>