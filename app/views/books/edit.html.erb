<div class="form-area">

  <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <div id="error_explanation">
      <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>

    <%= form_for(@book) do |f| %>

    <h5>Title</h5>
    <%= f.text_field :title %>

    <h5>Body</h5>
    <%= f.text_area :body %>

    <h5 class="btn-create">
    <%= f.submit 'Update Book' %>
    </h5>
  <% end %>

    <p class="post-menu">
      <%= link_to "Show", book_path(@book) %>
    </p>
    <span>|</span>
    <p class="post-menu">
      <%= link_to "Back", books_path %>
    </p>

</div>